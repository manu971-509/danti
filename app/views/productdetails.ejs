<%- include("partials/header.ejs") %>
<main>
  <div class="container my-5">
    <h2 class="text-center mb-4">Fiche détaillée du produit</h2>

    <div class="row g-4 align-items-center">
      <!-- Section de l'image -->
      <div class="col-md-6">
        <img
          class="img-fluid rounded shadow"
          src="<%= productDetails.illustration_binary %>"
          alt="<%= productDetails.name %>"
        />
      </div>

      <!-- Section des informations produit -->
      <div class="col-md-6">
        <h3 class="mb-3"><%= productDetails.name %></h3>
        <p class="text-muted mb-3"><%= productDetails.description %></p>
        <p class="fs-4 fw-bold text-success"><%= productDetails.price %>€</p>

        <a href="/product/panier" class="btn btn-primary btn-lg">
          Ajouter au panier
        </a>
      </div>
    </div>
  </div>
</main>
<%- include("partials/footer.ejs") %>
